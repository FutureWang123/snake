CC = sc
CFLAGS = DEF HAVE_FCNTL_H DEF HAVE_ERRNO_H \
         DEF TIME_WITH_SYS_TIME DEF HAVE_DEVICES_TIMER_H \
         DEF BSD_STYLE_GETTIMEOFDAY DEF BIG=__far \
         NOCHKABORT NOSTKCHK OPTIMIZE PARAMS=REG

VMSOBJS = amiga_main.o amiga_mainwin.o cpu.o lcdimg.o getopt.o

vms: $(VMSOBJS)
	sc LINK pname=$@ $(VMSOBJS)

clean :
	-delete FORCE vms $(VMSOBJS)

amiga_mainwin.o : amiga_mainwin.c
	 $(CC) $(CFLAGS) NOSTRINGMERGE DATA=FAR amiga_mainwin.c
